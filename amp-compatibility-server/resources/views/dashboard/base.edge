	{{ style('css/dashboard') }}
</head>
<body>
<header>
	<nav class="navbar navbar-expand-md navbar-dark sticky-top bg-primary shadow">
		<div class="container-fluid">
			<button
			class="navbar-toggler collapsed"
			type="button"
			data-bs-toggle="collapse"
			data-bs-target="#sidebarMenu" aria-controls="sidebarMenu" aria-expanded="false"
			aria-label="Toggle navigation">
				<span class="material-icons align-middle navbar-brand me-0">menu</span>
			</button>
			<a class="navbar-brand fs-4" href="{{ route('DashboardController.index') }}">
				AMP WP Compatibility
			</a>

			<div class="col-6 header-tools">
				@!section('header_tools')
			</div>

			<div class="d-flex align-items-center">
				<ul class="navbar-nav">
					<li class="nav-item text-nowrap">
						<a class="nav-link" href="{{ route('AuthController.logout') }}"><span class="material-icons align-middle navbar-brand me-0">logout</span></a>
					</li>
				</ul>
			</div>
		</div>
	</nav>
</header>

<div class="container-fluid">
	<div class="row">
		<nav id="sidebarMenu" class="bg-light border-end col-md-3 col-xl-2 collapse d-md-block py-md-2 sidebar">
			<div class="position-sticky">
				<ul class="nav flex-column">
					@each(menuItem in dashboardMenuItems)

					<li class="nav-item py-md-1">
						@if( menuItem.childs )
							<div class="d-flex">
								<a
									class="nav-link text-black rounded-3 {{ menuItem.isActive ? 'active':'' }}"
									href="{{menuItem.url}}"
								>
									{{menuItem.title}}
								</a>
								<a
									class="nav-link"
									data-bs-toggle="collapse"
									href="#sub-menu-{{toHyphenated(menuItem.title)}}"
									role="button"
									aria-expanded="false"
									aria-controls="sub-menu-{{toHyphenated(menuItem.title)}}"
								>
									<span class="material-icons">expand_more</span>
								</a>
							</div>
							<ul id="sub-menu-{{toHyphenated(menuItem.title)}}" class="flex-column collapse">
								@each( item in menuItem.childs )
								<li class="nav-item">
									<a class="nav-link text-black rounded-3 {{ item.isActive ? 'active':'' }}" href="{{item.url}}">
										<span data-feather="{{item.icon}}"></span>
										{{item.title}}
									</a>
								</li>
								@endeach
							</ul>
						@else
							<a href="{{menuItem.url}}" class="nav-link text-black rounded-3 {{ menuItem.isActive ? 'active':'' }}">
								<span data-feather="{{menuItem.icon}}"></span>
								{{menuItem.title}}
							</a>
						@endif
					</li>
					@endeach
				</ul>
			</div>
		</nav>
		<main class="col-md-9 ms-sm-auto col-xl-10 px-md-4">
			<div class="d-flex flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
				<h1 class="h2">{{dashboardActivePage.title}}</h1>
				<div>
					@!section('header_line')
				</div>
			</div>
			<div id="notification-container"></div>
			@!section('page')
		</main>
	</div>
</div>

{{ script('js/dashboard') }}

@!section('script')
</body>
</html>
